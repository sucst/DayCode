<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--
        xmlns:p="http://www.springframework.org/schema/p" p标签属性注入
        -->

    <!--
        <bean id="user" class="cn.atsuc.spring.bean.User">
            <property name="name" value="张三"/>
            <property name="age" value="18"/>
        </bean>
    -->

    <!--    使用p标签属性注入-->
    <bean id="user" class="cn.atsuc.spring.one.bean.User" p:name="张三" p:age="18"/>

<!--    set方法注入属性-->
    <bean id="book" class="cn.atsuc.spring.one.Vo.Book">
        <property name="BName" value="三国演义"/>
        <property name="BAuthor" value="罗贯中"/>
    </bean>

<!--    构造器方法-->
    <bean id="orders" class="cn.atsuc.spring.one.Vo.Orders">
        <constructor-arg name="OName" value="电脑"/>
        <constructor-arg name="address" value="北京"/>
    </bean>

</beans>


